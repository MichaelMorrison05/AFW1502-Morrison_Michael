Titanium.UI.setBackgroundColor('#000');

var mainWindow, appTitleText;

loadGeolookup = require('geolookup');
loadConditions = require('conditions');
loadGeo = require('geo');

// Application Title
var appTitleText = Ti.UI.createLabel({
	color: "#2c3233",
	top: 60,
	font: {fontSize: 32, fontFamily: "Roboto", fontWeight: "bold"},
	textAlign: "center",
	text: "My Weather App"
	
});

var latitude, longitude;

Ti.Geolocation.getCurrentPosition(function(e){

latitude = e.coords.latitude;

longitude = e.coords.longitude;

console.log("e.lat/long" + e.coords.latitude+"/"+e.coords.longitude);

console.log("lat/long" + latitude + "/" + longitude);

});

console.log("Outer: " + latitude + " Long: " + longitude);

mainWindow = Titanium.UI.createWindow({
	backgroundColor: '#fff'
});

mainWindow.add(appTitleText);
mainWindow.open();

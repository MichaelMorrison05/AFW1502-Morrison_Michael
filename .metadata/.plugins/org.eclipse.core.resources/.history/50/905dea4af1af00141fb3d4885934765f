var mainWindow = Ti.UI.createWindow({
	backgroundColor: '#1199ff'
});

var mainView = Ti.UI.createView({

});

var title = Ti.UI.createLabel({
	color: '#fff',
	text: 'My Weather App',
	font: {fontSize: 22, fontFamily: 'roboto', fontWeight: 'bold'},
	top: 50
});

var icon = Ti.UI.createImageView({
	height: 100,
	width: 100,
	top: 80
});

var weather = Ti.UI.createLabel({
	color: '#fff',
	top: 170
});

var temp_f = Ti.UI.createLabel({
	color: '#fff',
	top: 190
});

var city = Ti.UI.createLabel({
	color: '#fff',
	top: 210
});

var time = Ti.UI.createLabel({
	color: '#fff',
	top: 230
});

var lat = Ti.UI.createLabel({
	color: '#fff',
	top: 250
});

var lon = Ti.UI.createLabel({
	color: '#fff',
	top: 270
});

var state = Ti.UI.createLabel({
	color: '#fff',
	top: 290
});

exports.buildUI = function(obj){
	console.log('obj: ' + JSON.stringify(obj));
	
	icon.image = obj.ing;
	temp_f.text = 'temp_f: ' + obj.temp_f;
	weather.text = 'weather: ' + obj.weather;
	city.text = 'City: ' + obj.city;
	time.text = 'Time: ' + obj.time;
	lat.text = 'Latitude: ' + obj.lat;
	lon.text = 'Longitude: ' + obj.lon;
	state.text = 'State: ' + obj.state;
};

mainView.add(title, temp_f, icon, weather, city, time, lat, lon, state);
mainWindow.add(mainView);
mainWindow.open();